<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Share Things - @ViewBag.Title</title>
    @Scripts.Render("~/Scripts/jquery-1.7.1.js",
                    "~/Scripts/jquery-ui-1.8.20.js",
                    "~/Scripts/jquery.validate.min.js",
                    "~/Scripts/jquery.validate.unobtrusive.min.js"
                    )
    @Styles.Render("~/Content/themes/base/css", "~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/AdminPanel.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="allContent">
        <div class="head">
            <img width="38" height="42" src="@Url.Content("~/Content/Images/LogoSmall.png")" />
            Share Things
            @if (ShareThings.Content.SessionThings.IsInAdminPanel) {
                <span style="color:#ff4d4d; text-align:right; font-size:18px;">Admin Panel</span>
            }
        </div>
        @RenderPage("_HeadMenu.cshtml")

        <div class="content">
            @RenderBody()
        </div>

        <div class="footer"></div>
    </div>

    <!--Scripts.Render("~/bundles/jquery")-->
    @RenderSection("scripts", required: false)
</body>
</html>
