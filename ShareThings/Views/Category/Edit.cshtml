@model ShareThings.Models.Category

@{
    ViewBag.Title = "Edit Category";
}

<h2>Edit Category</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Category</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            <label>Category Name</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.name, new { @class = "txtInput" } )
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            <label>Description</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.description, new { @class = "txtInput" } )
            @Html.ValidationMessageFor(model => model.description)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.isPublic) 
            @Html.LabelFor(model => model.isPublic)
            @Html.ValidationMessageFor(model => model.isPublic)
        </div>

        <div class="editor-label">
            <label>Category</label>
        </div>
        <div class="editor-field">
            @{
                List<SelectListItem> lst = ViewBag.CatList;
                @Html.DropDownListFor(model => model.parent_id, lst, new { @class = "ddlInput" } )   
            }


            @Html.ValidationMessageFor(model => model.parent_id)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
